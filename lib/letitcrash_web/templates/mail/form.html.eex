<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :address %>
  <%= email_input f, :address, placeholder: "john.doe@example.org" %>
  <%= error_tag f, :address %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
